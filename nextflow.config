includeConfig 'config/params.config'
includeConfig 'config/resources.config'
includeConfig 'config/reports.config'

// Workdir for temporary data
workDir = "$SCRATCH/SAMBA/$params.projectName"

// Git informations of workflow
manifest {
    homePage = 'https://gitlab.ifremer.fr/bioinfo/SAMBA-nextflow'
    description = 'Standardized and Automated MetaBarcoding Analyses workflow developped by Ifremer SeBiMer team'
    defaultBranch = 'master'
    author = 'Cyril NoÃ«l, Laure Quintric'
    mainScript = 'SAMBA.nf'
    name = 'SAMBA'
}

// Define env variable that will be accessible in nextflow tasks
env {
    TMPDIR = "$SCRATCH"
}

