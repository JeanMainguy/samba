// Define parameters taht will be accessible in nextflow pipeline script
params {
    //projectName 
    projectName = "TO_BE_SET"
    //qiime input parameters
    inmanifest = "/TO/BE/SET/pipeline_indir/q2_manifest"
    inmetadata = "/TO/BE/SET/pipeline_indir/q2_metadata"
    //output directory using a timestamp (not compatible with resume mode)
    //outdir = "/TO/BE/SET/pipeline_outdir/$date-$projectName"
    outdir = "/TO/BE/SET/pipeline_outdir/$projectName"

    //tools environment bash script to load before execution
    qiime_env = ". /appli/bioinfo/qiime/2019.04/env.sh"
    r_stats_env = ". /appli/bioinfo/R/3.6.1/env.sh"

    //cutadapt parameters 
    cutadapt {
        primerF = "ACGGRAGGCAGCAG"
        primerR = "TACCAGGGTATCTAATCCT"
        errorRate = "0.15"
        overlap = "13"
        enable = true
    }
    //dada2 parameters
    dada2 {
        trim3F = "0"
        trim3R = "0"
        trunclenF = "0"
        trunclenR = "0"
        maxee = "2"
        minqual = "20"
        chimeras = "consensus"
        enable = true
    }
    //taxo parameters
    taxo {
        database = '/home/ref-bioinfo/tools_data/qiime2/DATABASE_silva_99_16S.qza'
        confidence = '0.8'
        enable = true
    }
    // stats parameters
    stats {
        Rstatsscript = "Rscript_qiime2_snakemake.R"
        Rdir = "R"
        data = "R/DATA"
        script = "R/SCRIPT"
        figures = "R/FIGURES"
        perc_abund_threshold = "5"
        distance = "bray"
        column_sample_replicat = "Replicats"
        exp_var_samples = "Groups_species"
        enable = true
    }
}
