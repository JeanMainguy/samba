// Define parameters taht will be accessible in nextflow pipeline script
params {
    //projectName 
    projectName = "ProjectName"
    //qiime input parameters
    inmanifest = "/PATH/TO/QIIME/MANIFEST/CSV/FILE"
    inmetadata = "/PATH/TO/QIIME/METADATA/CSV/FILE"
    //set stats_only to true if you already have your ASV table
    stats_only = false
    inasv_table = "/PATH/TO/ASV/TABLE/CSV"
    outdir = "/PATH/TO/OUTPUT/PIPELINE/DIRECTORY/$projectName"

    //Outputs steps directory names
    report_dirname = "00_report"
    import_dirname = "01_import"
    trimmed_dirname ="02_trimmed"
    dada2_dirname = "03_dada2"
    taxo_dirname = "04_taxo"
    stats_dirname = "05_statistical_analysis"

    //tools environment bash script to load before execution
    //we advise to create a env.sh file containing the activation of tool conda environment
    qiime_env = ". /PATH/TO/CONDA/ENV/BASH/SCRIPT/TO/SOURCE/FOR/qiime/2019.04/env.sh"
    r_stats_env = ". /PATH/TO/CONDA/ENV/BASH/SCRIPT/TO/SOURCE/FOR/R/3.6.1/env.sh"

    //data integrity parameters
    data_integrity {
        //add your primer sequences and replace wildcard in the primer sequence by .
        primerF = "ACGG.AGGCAGCAG"
        primerR = "TACCAGGGTATCTAATCCT"
        //columns' names in manifest file
        sampleid_column_name = "Sample-id"
        R1_files_column_name = "forward-absolute-filepath"
        R2_files_column_name = "reverse-absolute-filepath"
        //columns' names in metadata file
        barcode_column_name = "Barcode"
        enable=true
    }
   
    //qiime import data
    qiime_import {
        enable = false
    }
    //cutadapt parameters 
    cutadapt {
        //Set your forward and reverse primers for cutadapt
        primerF = "ACGGRAGGCAGCAG"
        primerR = "TACCAGGGTATCTAATCCT"
        errorRate = "0.15"
        overlap = "13"
        //activate or deactivate this step
        enable = true
    }
    //dada2 parameters
    dada2 {
        //adapt dada2 parameters to fit to your data 
        trim3F = "0"
        trim3R = "0"
        trunclenF = "0"
        trunclenR = "220"
        maxee = "2"
        minqual = "2"
        chimeras = "consensus"
        //activate or deactivate this step
        enable = true
    }
    //taxo parameters
    taxo {
        // if using specific ribosome region filtering process before assignation
        db_seqs = '/PATH/TO/QIIME/FORMATTED/SILVA/DB/SEQUENCE/FILE/qiime2/2019.07/silva_132_99_16S.qza'
        db_tax = '/PATH/TO/QIIME/FORMATTED/SILVA/TAX/FILE/qiime2/2019.07/majority_taxonomy_7_levels_99_16S.qza'
        confidence = '0.8'
        //activate or deactivate this step
        enable = true
    }
    //prepare_data_for_stats
    prepare_data_for_stats {
        //activate or deactivate this step
        enable = true
    }
    // stats parameters
    stats {
        perc_abund_threshold = "5"
        distance = "bray"
        //According to your metadata file, select the column name corresponding to the variable to analyze
        alpha_div_group = "Group"
        beta_div_criteria = "Polymer"
        //activate or deactivate alpha or beta diversity
        alpha_enable = true
        beta_enable = true
    }
}
